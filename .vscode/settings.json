{
  "groovyRunner.classpath": "${workspaceFolder}/lib/*:${workspaceFolder}/src/main/resources:${workspaceFolder}/src/test",
  "code-runner.runInTerminal": true,
  "code-runner.ignoreSelection": true,
  "code-runner.cwd": "$workspaceRoot",
  "code-runner.executorMap": {
    "groovy": "java -cp \"lib/*;src/main/resources;src/test\" groovy.ui.GroovyMain \"$fullFileName\""
  },
  "code-runner.executorMapByFileExtension": {
    ".groovy": "java -cp \"lib/*;src/main/resources;src/test\" groovy.ui.GroovyMain \"$fullFileName\""
  },
  "java.project.sourcePaths": [
    "src/test",
    "src/main/resources"
  ],
  "java.project.referencedLibraries": [
    "lib/**/*.jar"
  ],
  "java.debug.settings.justMyCode": false
}
